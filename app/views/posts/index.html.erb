<div class="hero-unit">
	<% provide(:title , 'Главная') %>
	<%=  link_to("Создать новый пост", new_post_path, class: "btn btn-large btn-primary")  %> 
	<h1>Сообщения в блоге</h1>
	<% if @post.empty? %>
		<b>Нет сообщений</b>
	<% else %>
		<% @post.each do |p| %>
			<p><b><%=link_to p.title, post_path(p) %></b></br>
			<%= p.text %></br>
			<%=  link_to("Редактировать", edit_post_path(p))  %> 
			|  
			<%=  link_to("Удалить", post_path(p),method: :delete, data: {confirm: "Точно удалить?"})  %>
		<% end %>
	<% end %>
</div>		